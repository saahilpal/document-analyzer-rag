# --- Application Environment ---
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
TRUST_PROXY=false

# --- Security & Credentials ---
# In production, use a strong random secret (e.g., node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optionally set a custom JWT secret for production instead of the fallback
JWT_SECRET=your_super_secure_jwt_secret_here

# --- Authentication Limits (Optional Overrides) ---
# AUTH_LOGIN_WINDOW_MS=900000     # Default: 15 minutes (in ms)
# AUTH_LOGIN_LOCK_MS=900000       # Default: 15 minutes (in ms)
# AUTH_LOGIN_MAX_FAILURES=6       # Default: 6 attempts

# --- AI Integration ---
# Get your API key from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# --- Upload Limits ---
MAX_UPLOAD_FILE_SIZE_BYTES=52428800

# --- RAG (Retrieval-Augmented Generation) Parameters ---
RAG_TOP_K=5
RAG_CANDIDATE_PAGE_SIZE=400
RAG_HISTORY_LIMIT=12
RAG_TOKEN_TO_CHAR_RATIO=4
RAG_CHUNK_TOKENS=1000
RAG_CHUNK_OVERLAP_TOKENS=200

# --- Local Vector Embedding Limits ---
LOCAL_EMBEDDING_BATCH_SIZE=24
LOCAL_EMBEDDING_BATCH_SIZE_MIN=8
LOCAL_EMBEDDING_BATCH_SIZE_MAX=64

# --- Background Worker & Job Queue ---
CLEANUP_INTERVAL_MS=900000
CLEANUP_COMPLETED_JOB_TTL_HOURS=24
CLEANUP_FAILED_JOB_TTL_HOURS=72
CLEANUP_TEMP_FILE_TTL_HOURS=6

# --- Email Service Configuration ---
# Required for sending Verification OTPs and Password Reset emails
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM='"Architectly Security" <noreply@architectly.app>'
